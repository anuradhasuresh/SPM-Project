@*Razor Page to display the analysis*@

@page
@model CalorieWebApp.Pages.Users.AnalysisModel
@{
}

<br>
<h2>User Analysis</h2>

<a class="btn btn-primary btm-sm" href="/Users/Index">Display All User Entries</a>
<a class="btn btn-primary btm-sm" href="/Users/Add">Add New Entry</a>

<form method="POST">
    <table>
        <tr>
            <td>Enter a user's name:</td>
            <td><input type="text" name="name" value="@Model.user.Name"></td>
        </tr>
    </table>
    <p></p>
    <br />
    <input type="submit" value="Get Analysis" class="btn btn-primary" />
</form>

@if (@Model.DataAnalysis.Count > 0)
{
    <h2>Analysis</h2>
    <br />
    @foreach(var line in @Model.DataAnalysis){
        <div id="analysis"> @line </div>
    }
}

