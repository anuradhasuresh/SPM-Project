@*Razor Page to edit a record from the DB*@

@page
@model CalorieWebApp.Pages.Users.EditModel
@{
}
<style>
    body {
        background-color: #c0d7fa;
    }
</style>
<br>
<h2>Edit User Details</h2>

<a class="btn btn-primary btm-sm" href="/Users/Index">Display All User Entries</a>
<a class="btn btn-primary btm-sm" href="/Users/Create">Add New Entry</a>
<a class="btn btn-primary btm-sm" href="/Users/Analysis">Analysis</a>

@if (@Model.errorMessage.Length > 0)
{
    <div>Model.errorMessage</div>
}
<form method="POST">
    <input type="hidden" name="id" value="@Model.user.Id" />
    <table>
        <tr>
            <td>Name</td>
            <td><input type="text" name="name" placeholder="name" value="@Model.user.Name"></td>
        </tr>
        <tr>
            <td>Age</td>
            <td><input type="text" name="age" placeholder="age" value="@Model.user.Age"></td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>
                <select name="gender" value="@Model.user.Gender">
                    <option>M</option>
                    <option>F</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>Height</td>
            <td><input type="text" name="height" placeholder="height" value="@Model.user.Height"></td>
        </tr>
        <tr>
            <td>Weight</td>
            <td><input type="text" name="weight" placeholder="weight" value="@Model.user.Weight"></td>
        </tr>
        <tr>
            <td>Current Calorie Intake</td>
            <td><input type="text" name="currentCalorieIntake" placeholder="current calorie intake for the day" value="@Model.user.CurrentCalorieIntake"></td>
        </tr>
    </table>
    <p></p>

    @if (Model.successMessage.Length > 0)
    {
        <div>Model.successMessage</div>
    }
    <input type="submit" value="Edit" class="btn btn-primary" />
</form>