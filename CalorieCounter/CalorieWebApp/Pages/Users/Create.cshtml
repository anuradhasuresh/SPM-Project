@*Razor Page to create/ add a new item to the DB*@

@page
@model CalorieWebApp.Pages.Users.CreateModel
@{
}

<br>
<h2>Create User Record</h2>

@if (@Model.errorMessage.Length > 0)
{
    <div>Model.errorMessage</div>
}
<form method="POST">
    <table>
        <tr>
            <td>Name</td>
            <td><input type="text" name="name" value="@Model.user.Name"></td>
        </tr>
        <tr>
            <td>Age</td>
            <td><input type="text" name="age" value="@Model.user.Age"></td>
        </tr>
        <tr>
            <td>Gender</td>
            <td><input type="text" name="gender" value="@Model.user.Gender"></td>
        </tr>
        <tr>
            <td>Current Calorie Intake</td>
            <td><input type="text" name="currentCalorieIntake" value="@Model.user.CurrentCalorieIntake"></td>
        </tr>
    </table>
    <p></p>

    @if (Model.successMessage.Length > 0)
    {
        <div>Model.errorMessage</div>
    }
    <input type="submit" value="Add" class="btn btn-primary" />
</form>