@*Razor Page to delete a record from the DB*@

@page
@model CalorieWebApp.Pages.Users.DeleteModel
@{
}

<style>
    body {
        background-color: #c0d7fa;
    }
</style>

<br>
<h2>Delete User Details</h2>

<a class="btn btn-primary btm-sm" href="/Users/Index">Display All User Entries</a>
<a class="btn btn-primary btm-sm" href="/Users/Add">Add New Entry</a>
<a class="btn btn-primary btm-sm" href="/Users/Analysis">Analysis</a>

@if (@Model.errorMessage.Length > 0)
{
    <div>Model.errorMessage</div>
}
<form method="POST">
    <input type="hidden" name="id" value="@Model.user.Id" />
    <table>
        <tr>
            <td>Name</td>
            <td>"@Model.user.Name"</td>
        </tr>
        <tr>
            <td>Age</td>
            <td>"@Model.user.Age"</td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>"@Model.user.Gender"</td>
        </tr>
        <tr>
            <td>Current Calorie Intake</td>
            <td>"@Model.user.CurrentCalorieIntake"</td>
        </tr>
    </table>

    <div>"@Model.successMessage"</div>

    <input type="submit" value="Delete" class="btn btn-primary" />
</form>